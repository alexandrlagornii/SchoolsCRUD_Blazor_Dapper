@page "/classes"
@inject Logic.SchoolsDbAccessLayer dbLayer
@inject NavigationManager navigationManager
@attribute [StreamRendering]
@rendermode @(new InteractiveServerRenderMode(prerender: false))

@using SchoolsProjectBlazorDapper.Models;
@using SchoolsProjectBlazorDapper.Components.Pages.Reusable;
@using MudBlazor

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

@*Wait for everything to load*@
@if (ClassesTable.Count == 0)
{
    <MudButton Variant="Variant.Outlined" Color="Color.Primary" @onclick="AddClassPageRedirect">Add</MudButton>
    <p style="padding-top: 10px;"><em>Loading Classes...</em></p>
}
else
{
    <MudButton Variant="Variant.Outlined" Color="Color.Primary" @onclick="AddClassPageRedirect">Add</MudButton>
    <MudButton Variant="Variant.Outlined" Color="Color.Primary" Disabled="@(SelectedClass.Id == null)" @onclick="(() => EditClassPageRedirect(SelectedClass))">Edit</MudButton>
    <MudButton Variant="Variant.Outlined" Color="Color.Secondary" Disabled="@(SelectedClass.Id == null)" @onclick="DeleteClass">Delete</MudButton>
    <SH_d_ClassesTable ClassTable="@ClassesTable" @bind-SelectedClass="@SelectedClass" @bind-SelectedClass:event="SelectedClassChanged" />
}

@code {
    // Data models
    List<SH_d_Class> ClassesTable = new();
    private SH_d_Class SelectedClass = new();

    // Load table
    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(500);
        ClassesTable = await dbLayer.SH_d_ClassesSelectAll();
    }

    // Delete class if selected and pressed delete
    private async Task DeleteClass()
    {
        await dbLayer.SH_d_ClassesDeleteById(SelectedClass);
        navigationManager.NavigateTo(navigationManager.Uri, true);
    }

    // Redirect to page for editing class
    private async Task EditClassPageRedirect(SH_d_Class _class)
    {
        navigationManager.NavigateTo($"/class-edit/{_class.Id}");
    }

    // Redirect to page for adding class
    private async Task AddClassPageRedirect()
    {
        navigationManager.NavigateTo("/class-add");
    }
}
